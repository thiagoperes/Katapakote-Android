<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pattern" >

    <RelativeLayout
        android:id="@+id/cabecalho"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/gradient"
        android:orientation="horizontal"
        android:padding="0dip" >

        <TextView
            android:id="@+id/texto1"
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.52"
            android:gravity="center_horizontal|center_vertical"
            android:text="Adicionar Pakote"
            android:textColor="#FFFFFF"
            android:textSize="8pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignBaseline="@+id/texto1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.07"
            android:text="OK" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/cabecalho"
        android:background="@drawable/dropshadow" >
    </View>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/border" >

        <EditText
            android:id="@+id/nameText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:hint="Nome (Ex.: Bugiganga)" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/codeText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nameText"
            android:layout_alignLeft="@+id/nameText"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:hint="CÃ³digo (Ex.: RA123123123HK)"
            android:inputType="textCapCharacters|text"
            android:maxLength="13" />

    </RelativeLayout>

</RelativeLayout>